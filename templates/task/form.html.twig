{% extends 'base.html.twig' %}

{% block body %}
    <div class="row">
        {{ form_start(form) }}
            {{ form_widget(form) }}
            <button type="submit" class="btn btn-success pull-right">
                {% if task is defined %}
                    Modifier
                {% else %}
                    Ajouter
                {% endif %}
            </button>
        {{ form_end(form) }}
            {% if task is defined %}
                    <form action="{{ path('task_delete', {'id' : task.id }) }}">
                        <button class="btn btn-danger pull-right">Supprimer</button>
                    </form>
            {% endif %}
        <a href="{{ path('task_list') }}" class="btn btn-primary">Retour à la liste des tâches</a>
    </div>
{% endblock %}
